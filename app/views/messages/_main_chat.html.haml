.main-chat
  .main-chat__group-info
    .main-chat__group-info__box
      .main-chat__group-info__box__group-name
        = @group.name
      %ul.main-chat__group-info__box__group-list
        Member:
        %li.main-chat__group-info__box__group-list__mem
          - @group.users.each do |user|
            = user.name
        
    .main-chat__group-info__edit-space
      = link_to edit_group_path(@group) ,class:"edit-btn" do
        edit
  .main-chat__group-message
    = render @messages
  .main-chat__message-form
    = form_for [@group, @message] do |f|
      .main-chat__message-form__box
        = f.text_field :post, placeholder: 'type a message',class: "main-chat__message-form__box__message"
        = f.label :image, class: 'main-chat__message-form__box__btn' do
          = icon('far', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit'Send',  class: 'main-chat__message-form__send-btn'